{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "public": true,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/lab-consumables",
      "dest": "/public/lab-consumables.html"
    },
    {
      "src": "/geological-consumables",
      "dest": "/public/geological-consumables.html"
    },
    {
      "src": "/safety-consumables",
      "dest": "/public/safety-consumables.html"
    },
    {
      "src": "/technical-services",
      "dest": "/public/technical-services.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}